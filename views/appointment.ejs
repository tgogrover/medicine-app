<head>
	<title>PHARMACY APP</title>
	<link rel="stylesheet" type="text/css" href="/css/appointment.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>


<div class="container mt-5 mb-5">
    <% if(Error !='') {%>
      <a href="/api/dashboard"><h3 style="color: red"><%= Error %></h3></a>  
      <% } %>

      <% if(Message !='') {%>
  <% Message.forEach(function(doctors) { %>
  <div class="d-flex justify-content-center row">
      <div class="col-md-10">
          <div class="row p-2 bg-white border rounded">
              <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="/doctorUploads/<%= doctors.Profile_Image[0].Image %>"></div>
              <div class="col-md-6 mt-1">
                  <h5>Name: <%= doctors.Full_Name %></h5>
                  <div class="d-flex flex-row">
                      <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span></span>
                  </div>
                  <div class="mt-1 mb-1 spec-1"><span>Mobile Number: <%= doctors.Mobile_Number %><br></span><span class="dot"></span><span>Email: <%= doctors.Email %><br></span><span class="dot"></span><span>Specialization: <%= doctors.Specialization %><br></span></div>
                  <div class="mt-1 mb-1 spec-1"><span>Degree: <%= doctors.Degree %><br></span><span class="dot"></span><span>Address: <%= doctors.Clinic %><br></span><span class="dot"></span><span>Monday to Sunday<br></span></div>
                  <p class="text-justify text-truncate para mb-0"><br><br></p>
              </div>
              <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                  <div class="d-flex flex-row align-items-center">
                      <h4 class="mr-1"></h4><span class="strike-text"></span>
                  </div>
                  <h6 class="text-success">10 AM to 6 AM<br></h6>
                  <div class="d-flex flex-column mt-4"><h6 class="btn bTn-primary btn-sm" ><a href="/api/createAppointment/<%= doctors._id %>">Request Appointment</a>  </h6>
                    <h6 class="btn btn-outline-primary btn-sm mt-2" >Role: <%= doctors.Role%></h6></div>
              </div>
          </div>
      </div>
  </div>
  <% }) %>
  <% } %>
</div>