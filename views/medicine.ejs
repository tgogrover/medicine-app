<head>
	<title>PHARMACY APP</title>
	<link rel="stylesheet" type="text/css" href="/css/medicine.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>












<div class="container d-flex justify-content-center mt-50 mb-50">
    <% if(Error !='') {%>
        <h3 style="color: red"><%= Error %></h3>
      <% } %>
      <% if(message) {%>
        <h3 style="color: green"><b><%= message %></b></h3>
        <% } %>
    <div class="row">
        <% Message.forEach(function(medicine) { %>
       <div class="col-md-10">
        
            <div class="card card-body">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                            <div class="mr-2 mb-3 mb-lg-0">
                                
                                    <img src="/medicineUploads/<%= medicine.ProductPictures[0].img %>" width="150" height="150" alt="">
                               
                            </div>

                            <div class="media-body">
                                <h6 class="media-title font-weight-semibold">
                                    <a href="#" data-abc="true"><%= medicine.Name %></a>
                                </h6>

                                <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Medicine</a></li>
                                    <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Products</a></li>
                                </ul>

                                <p class="mb-3"><%= medicine.Description %></p>

                                <ul class="list-inline list-inline-dotted mb-0">
                                    <li class="list-inline-item">All medicine added to your<a href="/api/customer/cart" data-abc="true">CART</a></li>
                                    <li class="list-inline-item">Go to <a href="/api/dashboard" data-abc="true">DASHBOARD</a></li>
                                </ul>
                            </div>

                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <h3 class="mb-0 font-weight-semibold">â‚¹ <%= medicine.Price %></h3>

                                <div>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>

                                </div>

                                <div class="text-muted">2022 reviews</div>
                                <form action="/api/customer/addItemsToCart/<%= medicine._id%>" method="post" role="form"> 
                                <button  class="btn btn-warning mt-4 text-white"><i class="icon-cart-add mr-2"></i> Add to cart</button>
                                </form>
                            </div>
                        </div>
                    </div>



                         
    </div> 
    <% }) %>                    
    </div>
    
</div>











  
        

    